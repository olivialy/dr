.screen
    min-height: 100vh

    // modifiers
    &-start
        display flex

    for tint, colour in $colour
        &-{tint}
            background-color: colour

    // elements
    img
        max-width: 100%
        height: auto

    &--content
        display: flex
        align-items: stretch
        min-height: 100vh
        overflow: auto

        @media $screen.xs
            flex-direction: column
            padding-top: 3em

    &--about
    &--illustration
        display: flex
        flex-direction: column
        padding: 0 1em

    &--about
        justify-content: center

    &--illustration
        justify-content: flex-end

        &-vcenter
            justify-content: center

        @media $screen.xs
            order: 2

    &--icon
        width: 3.625em
        height: @width
        margin-bottom: 1.5em

    &--title
        padding-bottom: .5em
        color: $colour.default
        font-size: 7.5vw
        line-height: 1
        text-transform: uppercase

        @media $screen.xs
            font-size: 2.125em

        @media $screen.md
            font-size: 3.125em

    &--catchline
        padding-bottom: 1em
        font-family: $font.heading
        font-size: 1.25em
        line-height: 1

        a&:hover
            > .border
                width: 8.25em // large .border width | @todo: please refactor this!
