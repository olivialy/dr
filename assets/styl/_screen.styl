.screen
    min-height: 100vh

    for tint, colour in $colour
        &-{tint}
            background-color: colour

    &--content
        display: flex
        align-items: stretch
        height: 100vh
        overflow: auto

    &--about
    &--illustration
        display: flex
        flex-direction: column
        padding: 0 1em

    &--about
        justify-content: center

    &--illustration
        justify-content: flex-end

        img
            max-width: 100%
            height: auto

        &-vcenter
            justify-content: center

    &--icon
        width: 3.625em
        height: @width
        margin-bottom: 1.5em

    &--title
        padding-bottom: .5em
        color: $colour.default
        font-size: 3.125em
        line-height: 0.9
        text-transform: uppercase

    &--catchline
        padding-bottom: 1em
        font-family: $font.heading
        font-size: 1.25em
        line-height: 1

        a&:hover
            > .border
                width: 8.25em // large .border width | @todo: please refactor this!
