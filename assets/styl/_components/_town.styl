.town
    position: relative
    width: 320px
    margin: 0 auto

    h3
        display: inline-block
        margin-bottom: .5em
        padding-bottom: .5em
        border-bottom: 1px solid
        font-family: $font.body
        font-size: 1em
        font-weight: bold
        text-transform: uppercase

    img
        position: relative


    &-circle
        position: absolute
        left: 50%
        width: 280px
        height: @width
        border-radius: .5 * @width
        font-size: .75em
        transform: translateX(-50%)

        &-content
            width: 75%
            position absolute
            top: 50%
            left: 50%
            transform: translate(-50%, -50%)

        &-1
            background-color: $colour.teal
            color: $colour.darkgrey

        &-2
            background-color: $colour.darkgrey
            color: $colour.default

        &-3
            background-color: $colour.teal
            color: $colour.darkgrey

        @media $screen.sm
            &-1
                top: 13%
                left: 63%

            &-2
                top: 35%
                left: 21%

            &-3
                top: 60%
                left: 75%

        @media $screen.md
            width: 340px
            height: @width
            border-radius: .5 * @width
            font-size: .9em
            transform: translateX(0)

            &-content
                width: 75%
                transform: translate(-50%, -50%)

            &-1
                top: 9%
                left: -12%

            &-2
                top: 32%
                left: -48%

            &-3
                top: 56%
                left: -42%

        @media $screen.lg
            &-1
                left: 10%
