$gutter = 1.2rem
$columns = 12 // number of columns
$screen = {
    sm:  "screen and (max-width: 40em)",
    md: "screen and (min-width: 40em)",
    lg:  "screen and (min-width: 60em)",
    xl:  "screen and (min-width: 75em)"
}

$fontsize = 1.6rem
$font = {
    body: unquote('"Droid Sans",Helvetica, Arial, sans-serif'),
    heading: unquote('"Droid Serif", Georgia, Times, serif')
}

$color = {
    default: #444444,
    secondary: #a7a7a7,
    highlight: #cc3366,
    link: #cc3366
}
