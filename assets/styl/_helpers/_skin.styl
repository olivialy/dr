// Background of sections
.skin

    &-conviction
        background-image: url(../img/skin-conviction.jpg)
        background-repeat: no-repeat
        background-position: center bottom
        background-size: auto 100%

    &-panda
        padding-top: 4em
        background-image: url(../img/skin-panda.jpg)
        background-repeat: no-repeat
        background-position: center
        background-size: cover

    &-papercut
        background-image: url(../img/skin-papercut.jpg)
        background-repeat: repeat-x
        background-size: 100% 100%

    &-pop
        background-image: url(../img/skin-pop.jpg)
        background-repeat: no-repeat
        background-position: center top
        background-size: 100% 100%

    &-proud
        background-color: #125d93
        background-image: url(../img/skin-proud.png)
        background-repeat: no-repeat
        background-position: center top
        background-size: auto 100%

    &-too
        background-image: url(../img/skin-too.jpg)
        background-repeat: no-repeat
        background-size: cover

    &-town
        background-image: url(../img/skin-town.jpg)
        background-repeat: no-repeat
        background-position: center top
        overflow-x: hidden
