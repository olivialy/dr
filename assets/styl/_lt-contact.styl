.lt-contact
    button
        position: absolute
        bottom: 2em
        left: 50%
        padding: .5em 1em
        border: none
        background-color: $colour.darkgrey
        color: $colour.default
        font-weight: bold
        text-transform: uppercase
        transform: translateX(-50%)

    form
        position relative
        flex-grow: 1
        display: flex
        align-items: stretch
        padding-top: 2em

    &--content
        display: flex
        flex-direction: column
        min-height: 100vh

    &--illustration
        position: relative
        overflow: hidden

        > img
            position: absolute
            top: 0
            right: 0
            max-width: inherit!important
