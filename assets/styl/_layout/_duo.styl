.l-duo
    position: relative
    background-image: url(../img/bg-duo.jpg)
    background-repeat: no-repeat
    background-position: center
    background-size: auto 100%

    p
        padding-bottom: .25em

    p + h3
        padding-top: 1em

    &-content
        position: relative
        z-index: 2

    &-section
        float:left

        @media $screen.md
            _column(6)

    &:after
        position: absolute
        top: 0
        z-index: 1
        content: ''
        display: block
        width: 100%
        height: 100%
        background-color: rgba(0, 0, 0, .75)
